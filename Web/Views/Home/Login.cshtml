@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <script src="~/js/jquery.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/site.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top:150px;">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Giriş yapın</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-controller="Home" asp-action="Login" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Kullanıcı adı" id="txtUserName" name="UserName" type="text" value="user1" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Parola" id="txtPassword" name="Password" type="Password" value="Password@123" />
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Beni hatırla"> Beni hatırla
                                    </label>
                                </div>
                                <input id="btnLogin2" class="btn btn-lg btn-success btn-block" type="submit" value="Giriş">
                            </fieldset>
                            <div class="text-danger text-center">
                                @ViewBag.Message
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>