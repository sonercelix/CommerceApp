@model IEnumerable<Web.Models.CategoryModel>

<div class="text-right">
    @if (ViewData.ModelState.ErrorCount == 0)
    {
        <a asp-action="Create" class="btn btn-primary">Create new category</a>
    }
</div>
<div asp-validation-summary="All">
</div>
<div class="card">
    <div class="card-header">
        <p class="text-right">
            <div class="card-title">Category List</div>
        </p>
    </div>
    <div class="card-body">
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>ParentCategoryName</th>
                            <th>Name</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ParentCategoryName</td>
                                <td>@item.Name</td>
                                <td class="text-right">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>