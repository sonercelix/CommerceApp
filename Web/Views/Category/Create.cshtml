@model Web.Models.CategoryModel

<div asp-validation-summary="All" class="text-danger">
</div>

<div class="card">
    <div class="card-header">
        <p class="text-right">
            <div class="card-title">Create New Category</div>
        </p>
    </div>
    <div class="card-body">
        <div>
            <form asp-controller="Category" asp-action="Create">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2">Parent Category</div>
                        <div class="col-md-10">
                            <select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">Category Name</div>
                        <div class="col-md-10">
                            <input type="text" asp-for="Name" placeholder="Category Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 text-right">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="text-right">
            @Html.ActionLink("Back to List", "Index", "Category", null, new { @class="btn btn-primary" })
        </div>
    </div>
</div>





