@model Web.Models.ProductModel

<div asp-validation-summary="All" class="text-danger">
</div>

<div class="card">
    <div class="card-header">
        <p class="text-right">
            <div class="card-title">Create New Product</div>
        </p>
    </div>
    <div class="card-body">
        <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-2">Parent Category</div>
                    <div class="col-md-10">
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">Product Name</div>
                    <div class="col-md-10">
                        <input type="text" asp-for="Name" placeholder="Category Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">Description</div>
                    <div class="col-md-10">
                        <input type="text" asp-for="Description" placeholder="Category Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">Price</div>
                    <div class="col-md-10">
                        <input type="text" asp-for="Price" placeholder="Category Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">IsActive</div>
                    <div class="col-md-10">
                        <input type="checkbox" asp-for="IsActive" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">Image</div>
                    <div class="col-md-10">
                        <input type="file" name="file" id="file" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 text-right">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
        <div class="text-right">
            @Html.ActionLink("Back to List", "Index", "Product", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    </div>
       
