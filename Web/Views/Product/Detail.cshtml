@model Web.Models.ProductModel

<section class="mb-5">

    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">
            <div id="mdb-lightbox-ui"></div>
            <div class="mdb-lightbox">
                <div class="row product-gallery mx-1">
                    <img src="~/images/@Model.ImageUrl" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h5>@Model.Name</h5>
            <p class="mb-2 text-muted text-uppercase small">@Model.CategoryName</p>
            <p><span class="mr-1"><strong>@Model.Price TL</strong></span></p>
            <p class="pt-1">
                @Model.Description
            </p>
            <p>
               IsActive : @Model.IsActive
            </p>
            <hr>
        </div>
    </div>
</section>


<div class="text-right">
    @Html.ActionLink("Back to List", "Index", "Product", null, new { @class = "btn btn-primary" })
</div>